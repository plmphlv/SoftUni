@model int
@{
	ViewBag.Title = $"Numbers from 1 to {Model}";
}
@section Scripts {
	<script src="~/js/numbers.js"></script>
}

<h2>@ViewBag.Title</h2>

<br />

<ul>
	@for (int i = 1; i <= Model; i++)
	{
		<li>@i</li>
	}
</ul>

<br />

<p>Thats all folks!</p>

<br />

<button class="btn btn-primary" class="btn-primary" onclick="BackToInput()">Back to input (JS Function)</button>
<br />
<br />
<a class="btn btn-primary" class="btn-primary" asp-controller="Number" asp-action="Index">Back to input (ASP Controller)</a>
